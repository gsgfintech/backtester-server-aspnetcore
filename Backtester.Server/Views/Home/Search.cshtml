@using static Backtester.Server.ViewComponents.JobGroupListType

@model Backtester.Server.ViewModels.SearchViewModel

@{
    ViewBag.Title = "Job Search";
}

<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Search Jobs</h4>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" asp-controller="Home" asp-action="DoSearch" method="post">
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="GroupId"></label>
                        <div class="col-md-6">
                            <input class="form-control" asp-for="GroupId" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="Strategy"></label>
                        <div class="col-md-6">
                            <select class="form-control" asp-for="Strategy" asp-items="Model.StratsNames"></select>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-md-3 control-label">Search by Time Range</label>
                        <div class="form-group col-md-3">
                            <label for="rangeStart" class="col-md-2 control-label" asp-for="RangeStart"></label>
                            <div class="col-md-10">
                                <input asp-for="RangeStart" />
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="rangeEnd" class="col-md-2 control-label" asp-for="RangeEnd"></label>
                            <div class="col-md-10">
                                <input asp-for="RangeEnd" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-6">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(Model.SearchId))
{
    <div class="row">
        <div class="col-xs-12">
            @await Component.InvokeAsync("JobGroupsList", new { listType = Search, searchId = Model.SearchId })
        </div>
    </div>
}